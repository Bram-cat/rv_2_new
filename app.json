{
  "expo": {
    "name": "Speechi",
    "slug": "speechi-app",
    "version": "1.9.0",
    "orientation": "portrait",
    "icon": "./assets/middle_icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "scheme": "speechi",
    "splash": {
      "image": "./assets/middle_icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#023047"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Speechi needs access to your microphone to record and analyze your speech."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/middle_icon.png",
        "backgroundColor": "#023047"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.cowman234.speechiapp"
    },
    "web": {
      "favicon": "./assets/middle_icon.png",
      "bundler": "metro"
    },
    "plugins": ["expo-router", "expo-font", "expo-document-picker"],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "9ce09868-e21d-4205-8bcc-fc84e33984a9"
      }
    }
  }
}
